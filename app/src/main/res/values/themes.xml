<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.JEJAKAKI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.JEJAKAKI" parent="Base.Theme.JEJAKAKI" />

    <style name="TextContent.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/syne_bold</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TextContent.Subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/syne_medium</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextContent.Bold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/syne_bold</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextContent.TabTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>