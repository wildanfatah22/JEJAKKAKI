<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="600dp"
    android:layout_height="400dp"
    android:background="@color/blue"
    tools:context=".ui.LanguageFragment">

    <TextView
        android:id="@+id/tvLanguage"
        style="@style/TextContent.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/ubah_bahasa"
        android:textColor="@color/white"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnID"
        android:fontFamily="@font/syne_bold"
        style="@style/TextContent"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:backgroundTint="@color/cream"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_btn_language"
        android:drawableStart="@drawable/flag_id"
        android:padding="25dp"
        android:text="@string/indonesia"
        android:textAllCaps="false"
        android:textColor="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLanguage" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnENG"
        android:fontFamily="@font/syne_bold"
        style="@style/TextContent"
        android:layout_width="500dp"
        android:backgroundTint="@color/cream"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_btn_language"
        android:drawableStart="@drawable/flag_english"
        android:padding="25dp"
        android:text="@string/inggris"
        android:textAllCaps="false"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnID" />

</androidx.constraintlayout.widget.ConstraintLayout>