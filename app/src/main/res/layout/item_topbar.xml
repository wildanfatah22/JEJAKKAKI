<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:keepScreenOn="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/head_banner"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:adjustViewBounds="true"
        android:background="@drawable/map_rectangle"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/customRoundedImageView" />

    <ImageView
        android:id="@+id/left_icon"
        android:layout_width="330dp"
        android:layout_height="120dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="44dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/klhk"
        android:scaleType="centerInside"
        android:src="@drawable/logo_klhk"
        app:layout_constraintBottom_toBottomOf="@id/head_banner"
        app:layout_constraintStart_toStartOf="@id/head_banner"
        app:layout_constraintTop_toTopOf="@id/head_banner" />

    <ImageView
        android:id="@+id/middle_icon"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:contentDescription="logo_java_jazz_festival"
        android:scaleType="centerInside"
        android:src="@drawable/logo_like"
        app:layout_constraintBottom_toBottomOf="@id/head_banner"
        app:layout_constraintEnd_toEndOf="@id/head_banner"
        app:layout_constraintStart_toStartOf="@id/head_banner"
        app:layout_constraintTop_toTopOf="@id/head_banner" />

    <ImageView
        android:id="@+id/right_icon"
        android:layout_width="302dp"
        android:layout_height="96dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="44dp"
        android:background="@android:color/transparent"
        android:contentDescription="Back"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_folu"
        app:layout_constraintBottom_toBottomOf="@id/middle_icon"
        app:layout_constraintEnd_toEndOf="@id/head_banner"
        app:layout_constraintTop_toTopOf="@id/middle_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>