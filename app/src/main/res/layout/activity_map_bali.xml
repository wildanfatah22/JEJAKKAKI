<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:keepScreenOn="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.maps.MapBaliActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/not_black">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/head_banner"
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:layout_marginHorizontal="98dp"
            android:adjustViewBounds="true"
            android:background="@drawable/map_rectangle"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/customRoundedImageView" />

        <ImageView
            android:layout_width="137dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:contentDescription="logo_java_jazz_festival"
            android:scaleType="centerInside"
            android:src="@drawable/logo_jjf_white"
            app:layout_constraintBottom_toBottomOf="@id/left_icon"
            app:layout_constraintEnd_toEndOf="@id/head_banner"
            app:layout_constraintStart_toStartOf="@id/head_banner"
            app:layout_constraintTop_toTopOf="@id/left_icon" />

        <ImageView
            android:id="@+id/left_icon"
            android:layout_width="280dp"
            android:layout_height="96dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="44dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/klhk"
            android:scaleType="centerInside"
            android:src="@drawable/ic_klhk"
            app:layout_constraintBottom_toBottomOf="@id/head_banner"
            app:layout_constraintStart_toStartOf="@id/head_banner"
            app:layout_constraintTop_toTopOf="@id/head_banner" />

        <ImageView
            android:id="@+id/right_icon"
            android:layout_width="302dp"
            android:layout_height="96dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="44dp"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_folunet"
            app:layout_constraintBottom_toBottomOf="@id/head_banner"
            app:layout_constraintEnd_toEndOf="@id/head_banner"
            app:layout_constraintTop_toTopOf="@id/head_banner" />

        <ImageView
            android:id="@+id/ivPulau"
            android:layout_width="1945dp"
            android:layout_height="400dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_bali"
            android:transitionName="pulauBali"
            app:layout_constraintBottom_toTopOf="@id/tvLogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/head_banner" />

        <ImageButton
            android:id="@+id/placeButton1"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginEnd="1908dp"
            android:layout_marginBottom="363dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_outline_place_48"
            android:tag="40"
            app:layout_constraintBottom_toBottomOf="@id/ivPulau"
            app:layout_constraintEnd_toEndOf="@id/ivPulau" />

        <ImageButton
            android:id="@+id/placeButton2"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginStart="315dp"
            android:layout_marginTop="18dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_outline_place_48"
            android:tag="41"
            app:layout_constraintStart_toStartOf="@id/ivPulau"
            app:layout_constraintTop_toTopOf="@id/ivPulau" />

        <ImageButton
            android:id="@+id/placeButton3"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginEnd="1308dp"
            android:layout_marginBottom="335dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_outline_place_48"
            android:tag="46"
            app:layout_constraintBottom_toBottomOf="@id/ivPulau"
            app:layout_constraintEnd_toEndOf="@id/ivPulau" />

        <ImageButton
            android:id="@+id/placeButton4"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginStart="851dp"
            android:layout_marginTop="45dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_outline_place_48"
            android:tag="42"
            app:layout_constraintStart_toStartOf="@id/ivPulau"
            app:layout_constraintTop_toTopOf="@id/ivPulau" />

        <ImageButton
            android:id="@+id/placeButton5"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginStart="865dp"
            android:layout_marginTop="221dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_outline_place_48"
            android:tag="43"
            app:layout_constraintStart_toStartOf="@id/ivPulau"
            app:layout_constraintTop_toTopOf="@id/ivPulau" />

        <ImageButton
            android:id="@+id/placeButton6"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginStart="940dp"
            android:layout_marginTop="282dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_outline_place_48"
            android:tag="44"
            app:layout_constraintStart_toStartOf="@id/ivPulau"
            app:layout_constraintTop_toTopOf="@id/ivPulau" />

        <ImageButton
            android:id="@+id/placeButton7"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginStart="1290dp"
            android:layout_marginTop="73dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_outline_place_48"
            android:tag="45"
            app:layout_constraintStart_toStartOf="@id/ivPulau"
            app:layout_constraintTop_toTopOf="@id/ivPulau" />

        <TextView
            android:id="@+id/tvPulau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:fontFamily="@font/syne_bold"
            android:text="@string/pulau_bali"
            android:textAlignment="center"
            android:textColor="@color/not_white"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="@id/head_banner"
            app:layout_constraintTop_toBottomOf="@id/head_banner" />

        <TextView
            android:id="@+id/tvLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="33dp"
            android:fontFamily="@font/neutro_extrabold"
            android:text="Jendela Jelajah \nKekayaan Indonesia"
            android:textColor="@color/not_white"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/head_banner" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/backgroundOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:visibility="gone" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="98dp"
        android:layout_marginTop="266dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:fontFamily="@font/syne_bold"
        android:text="@string/kembali"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="48sp"
        app:icon="@drawable/bx_left_arrow"
        app:iconSize="64dp" />

</RelativeLayout>